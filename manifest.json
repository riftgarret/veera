{
   "manifest_version": 2,

   "name": "Veera",
   "description": "The GBF Companion that keeps a close watch.",
   "version": "1.4.1",

   "icons": {
      "128": "src/assets/images/veera128.png",
      "48": "src/assets/images/veera48.png",
      "16": "src/assets/images/veera16.png"
   },

   "options_ui": {
      "chrome_style": true,
      "page": "src/pages/options/options.html"
   },

   "content_scripts": [ {
      "css": [  ],
      "js": [          
         "src/content/jquery-3.5.1.min.js",
         "src/content/sandbox.js",
         "src/content/injected.js",
         "src/content/message.js", 
         "src/content/utils.js", 
         "src/content/djeeta_bot.js",
         "src/content/content-hooks.js",
         "src/content/main.js"              
      ],
      "matches": [ "*://game.granbluefantasy.jp/*", "*://gbf.game.mbga.jp/*" ],
      "run_at": "document_start"
   } ],
   

   "background": {
     "scripts": ["src/background/message.js",
                 "src/background/gbf_constants.js", 
                 "src/background/time.js",
                 "src/background/background.js",
                 "src/background/storage.js",
                 "src/background/state.js",
                 "src/background/supplies.js",
                 "src/background/profile.js",
                 "src/background/planner.js",
                 "src/background/data/plannerdata.js",
                 "src/background/raids.js",
                 "src/background/data/raiddata.js",
                 "src/background/battle.js",
                 "src/background/unf.js",
                 "src/background/tools.js",                       
                 "src/background/djeeta/constants.js",
                 "src/background/djeeta/utils.js",
                 "src/background/djeeta/processes/BaseModule.js",                 
                 "src/background/djeeta/processes/RepeatModule.js",                 
                 "src/background/djeeta/processes/CombatModule.js",
                 "src/background/djeeta/processes/RewardModule.js",
                 "src/background/djeeta/processes/SupportModule.js",
                 "src/background/djeeta/processes/MasterProcess.js",
                 "src/background/djeeta/processes/ModularProcess.js",
                 "src/background/djeeta/processes/QuestProcess.js",
                 "src/background/djeeta/processes/ProvingGroundProcess.js",
                 "src/background/djeeta/processes/ProvingGroundModule.js",                 
                 "src/background/djeeta/processes/SimpleCombatProcess.js",
                 "src/background/djeeta/ScriptController.js",
                 "src/background/djeeta/ScriptReader.js",
                 "src/background/djeeta/DjeetaParser.js",
                 "src/background/djeeta/DjeetaState.js",
                 "src/background/djeeta/PageMeta.js",
                 "src/background/djeeta/script/rules.js",
                 "src/background/djeeta/script/actions.js",
                 "src/background/djeeta/script/expressions.js",
                 "src/background/djeeta/script/finds.js",
                 "src/background/djeeta/Djeeta.js"
               ]
   },

   "permissions": [
     "http://gbf.game.mbga.jp/*",
     "http://game.granbluefantasy.jp/*",
     "storage",
     "notifications",
     "tabs",
     "clipboardWrite",
     "activeTab"],


   "devtools_page": "src/pages/devtools/devtools.html",
   "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
