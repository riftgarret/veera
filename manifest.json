{
   "manifest_version": 2,

   "name": "Veera",
   "description": "The GBF Companion that keeps a close watch.",
   "version": "1.4.1",

   "icons": {
      "128": "src/assets/images/veera128.png",
      "48": "src/assets/images/veera48.png",
      "16": "src/assets/images/veera16.png"
   },

   "options_ui": {
      "chrome_style": true,
      "page": "src/pages/options/options.html"
   },

   "content_scripts": [ {
      "css": [  ],
      "js": [ 
         "src/content/message.js", 
         "src/content/utils.js", 
         "src/content/djeeta_bot.js",
         "src/content/main.js" 
      ],
      "matches": [ "*://game.granbluefantasy.jp/*", "*://gbf.game.mbga.jp/*" ],
      "run_at": "document_start"
   } ],

   "background": {
     "scripts": ["src/background/message.js",
                 "src/background/time.js",
                 "src/background/background.js",
                 "src/background/storage.js",
                 "src/background/state.js",
                 "src/background/supplies.js",
                 "src/background/profile.js",
                 "src/background/planner.js",
                 "src/background/data/plannerdata.js",
                 "src/background/raids.js",
                 "src/background/data/raiddata.js",
                 "src/background/battle.js",
                 "src/background/unf.js",
                 "src/background/tools.js",      
                 "src/background/djeeta_script.js",
                 "src/background/djeeta_script_evals.js",           
                 "src/background/djeeta_classes.js",
                 "src/background/djeeta_mind.js"                 
               ]
   },

   "permissions": [
     "http://gbf.game.mbga.jp/*",
     "http://game.granbluefantasy.jp/*",
     "storage",
     "notifications",
     "tabs",
     "clipboardWrite",
     "activeTab" ],


   "devtools_page": "src/pages/devtools/devtools.html"
}
